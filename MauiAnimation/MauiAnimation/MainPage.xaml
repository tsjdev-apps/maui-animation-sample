<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAnimation.MainPage"
             Padding="16">

    <VerticalStackLayout Spacing="12">

        <Button Text="Sequential Animation"
                Clicked="SequentialAnimationButtonOnClicked" />

        <Button Text="Parallel Animation"
                Clicked="ParallelAnimationButtonOnClicked" />

        <Button Text="Animation with Animation class"
                Clicked="AnimationClassButtonOnClicked" />

        <Image x:Name="LoadingImage"
               Source="dotnet_bot.png"
               WidthRequest="250"
               HeightRequest="250"
               VerticalOptions="Center"
               HorizontalOptions="Center" />
        
    </VerticalStackLayout>

</ContentPage>
